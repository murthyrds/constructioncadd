@model RegisterUserModel
@{
    ViewData["Title"] = "Edit";
}
<center>
    <form method="post" asp-antiforgery="true">
        <div>
            <label asp-for="@Model.Username">User Name:</label>
            <input asp-for="@Model.Username" />
            <span asp-validation-for="@Model.Username"></span>
        </div>
        <div>
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password"></span>
            </div>       
        <div>
            <label asp-for="@Model.Email">Email Id:</label>
            <input asp-for="@Model.Email" />
            <span asp-validation-for="@Model.Email"></span>
        </div>
        <div>
            <label asp-for="@Model.PhoneNumber"></label>
            <input asp-for="@Model.PhoneNumber" />
            <span asp-validation-for="@Model.PhoneNumber"></span>
        </div>
        <div>
            <input class="btn btn-primary" type="submit" value="Update" />
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</center>

