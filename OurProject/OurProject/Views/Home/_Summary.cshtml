@model User

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
   
<tr class="text-capitalize">
    <td>@Model.Id</td>
    <td> @Model.UserName</td>
    <td>@Model.Email</td>
    <td>@Model.PhoneNumber</td>
    <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">Detail</a></td>
    <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a></td>
    <td><a class="btn btn-primary" asp-action="Delete" asp-route-id="@Model.Id">Delete</a></td>
</tr>
     
