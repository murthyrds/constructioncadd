@model RegisterUserModel



@{
    ViewBag.Title = "Register";
}
<div class="content">
    <div class="container-fluid my_board">
     <div class="whitebox"><div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="whitebox_head"><img src="~/images/computer.png" width="35px">   Register !</div>
        <form class="row" method="post" asp-antiforgery="true">
            <div class="form-group col-md-12">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control " />
                <span asp-validation-for="Username"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            
            <div class="form-group col-md-12">
                <label asp-for="UserRoles">UserRoles</label>              
                @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, "Select", 
               new { @class = "form-control" })
                <span  asp-validation-for="UserRoles"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="form-group col-md-12">
                <input type="submit" class="btn btn-primary " value="Register" />
                <a asp-action="Details" asp-controller="Home" class="btn btn-primary">Cancel</a>
            </div>
        </form>

    </div>
</div> </div></div> </div> 
